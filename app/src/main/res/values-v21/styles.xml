<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.PopcornTimeRemote" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@color/bg</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="SeekBar.PopcornTimeRemote" parent="android:Widget.Material.SeekBar">
        <item name="android:progressDrawable">@drawable/popcorntimeremote_scrubber_progress_horizontal_holo_dark</item>
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:colorPrimary">@android:color/white</item>
        <item name="android:colorPrimaryDark">@android:color/white</item>
        <item name="android:colorAccent">@android:color/white</item>
    </style>

</resources>