<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <View
        android:id="@+id/shadow"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/fade_pt_remote" />

    <RelativeLayout
        android:id="@+id/mainInfoBlock"
        android:layout_below="@id/shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:paddingLeft="32dp"
        android:paddingRight="104dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:gravity="center_vertical"
        android:background="@color/accent_color"
        android:orientation="vertical">
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/text_color"
            android:textSize="21dp" />
        <TextView
            android:id="@+id/yearText"
            android:layout_below="@id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text=""
            android:textColor="@color/secondary_text_color" />
        <ImageView
            android:id="@+id/dotOne"
            android:layout_toRightOf="@id/yearText"
            android:layout_below="@id/titleText"
            android:layout_alignTop="@id/yearText"
            android:layout_alignBottom="@id/yearText"
            android:layout_width="4dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:src="@drawable/mini_cirle" />
        <TextView
            android:id="@+id/runtimeText"
            android:layout_toRightOf="@id/dotOne"
            android:layout_below="@id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text=""
            android:textColor="@color/secondary_text_color" />
        <ImageView
            android:id="@+id/dotTwo"
            android:layout_toRightOf="@id/runtimeText"
            android:layout_below="@id/titleText"
            android:layout_alignTop="@id/yearText"
            android:layout_alignBottom="@id/yearText"
            android:layout_width="4dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:src="@drawable/mini_cirle" />
        <TextView
            android:id="@+id/ratingText"
            android:layout_toRightOf="@id/dotTwo"
            android:layout_below="@id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text=""
            android:textColor="@color/secondary_text_color" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/playButton"
        android:layout_width="56dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="32dp"
        android:background="@drawable/play_button_circle" />

    <LinearLayout
        android:layout_below="@id/mainInfoBlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="?android:attr/windowBackground">

        <LinearLayout
            android:id="@+id/synopsisBlock"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingRight="@dimen/playercontrol_vertical_margin"
            android:paddingLeft="@dimen/playercontrol_vertical_margin"
            android:orientation="horizontal"
            android:gravity="top">
            <ImageView
                android:id="@+id/synopsisBlockImage"
                android:layout_width="32dp"
                android:layout_height="56dp"
                android:layout_marginRight="@dimen/playercontrol_icon_margin"
                android:src="@drawable/ic_action_info" />
            <TextView
                android:id="@+id/synopsisText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/playercontrol_vertical_margin"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:text="..."
                android:textSize="14sp"
                android:textColor="@android:color/white" />
        </LinearLayout>
        <View
            android:layout_width="310dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/div_white" />
        <LinearLayout
            android:id="@+id/trailerBlock"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingRight="@dimen/playercontrol_vertical_margin"
            android:paddingLeft="@dimen/playercontrol_vertical_margin"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true"
            android:background="@drawable/selectable_background_popcorntimeremote">
            <ImageView
                android:id="@+id/trailerBlockImage"
                android:layout_width="32dp"
                android:layout_height="56dp"
                android:layout_marginRight="@dimen/playercontrol_icon_margin"
                android:src="@drawable/ic_av_trailer" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/playercontrol_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:text="@string/watch_trailer"
                android:textSize="@dimen/playercontrol_text_size"
                android:textColor="@android:color/white" />
        </LinearLayout>
        <View
            android:layout_width="310dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/div_white" />
        <LinearLayout
            android:id="@+id/favouriteBlock"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingRight="@dimen/playercontrol_vertical_margin"
            android:paddingLeft="@dimen/playercontrol_vertical_margin"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true"
            android:background="@drawable/selectable_background_popcorntimeremote">
            <ImageView
                android:id="@+id/favouriteBlockImage"
                android:layout_width="32dp"
                android:layout_height="56dp"
                android:layout_marginRight="@dimen/playercontrol_icon_margin"
                android:src="@drawable/ic_action_favourite" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/playercontrol_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:text="@string/favourite"
                android:textSize="@dimen/playercontrol_text_size"
                android:textColor="@android:color/white" />
        </LinearLayout>
        <View
            android:layout_width="310dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/div_white" />
        <LinearLayout
            android:id="@+id/qualityBlock"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingRight="@dimen/playercontrol_vertical_margin"
            android:paddingLeft="@dimen/playercontrol_vertical_margin"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true"
            android:background="@drawable/selectable_background_popcorntimeremote">
            <ImageView
                android:id="@+id/qualityBlockImage"
                android:layout_width="32dp"
                android:layout_height="56dp"
                android:layout_marginRight="@dimen/playercontrol_icon_margin"
                android:src="@drawable/ic_action_quality" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/playercontrol_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:text="@string/quality"
                android:textSize="@dimen/playercontrol_text_size"
                android:textColor="@android:color/white" />
        </LinearLayout>
        <View
            android:layout_width="310dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/div_white" />
        <LinearLayout
            android:id="@+id/subtitlesBlock"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingRight="@dimen/playercontrol_vertical_margin"
            android:paddingLeft="@dimen/playercontrol_vertical_margin"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true"
            android:background="@drawable/selectable_background_popcorntimeremote">
            <ImageView
                android:id="@+id/subtitlesBlockImage"
                android:layout_width="32dp"
                android:layout_height="56dp"
                android:layout_marginRight="@dimen/playercontrol_icon_margin"
                android:src="@drawable/ic_av_subs" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/playercontrol_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:text="@string/subs"
                android:textSize="@dimen/playercontrol_text_size"
                android:textColor="@android:color/white" />
        </LinearLayout>
        <View
            android:layout_width="310dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/div_white" />
        <LinearLayout
            android:id="@+id/playerBlock"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingRight="@dimen/playercontrol_vertical_margin"
            android:paddingLeft="@dimen/playercontrol_vertical_margin"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true"
            android:background="@drawable/selectable_background_popcorntimeremote">
            <ImageView
                android:id="@+id/playerBlockImage"
                android:layout_width="32dp"
                android:layout_height="56dp"
                android:layout_marginRight="@dimen/playercontrol_icon_margin"
                android:src="@drawable/ic_av_player" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/playercontrol_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:text="@string/player"
                android:textSize="@dimen/playercontrol_text_size"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_below="@id/mainInfoBlock"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/fade_pt_remote_reverse" />

</RelativeLayout>